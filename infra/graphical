#!/usr/bin/env bash
set -eu

export DEBIAN_FRONTEND=noninteractive

debian() {
  apt update
  apt install -y $(apt search cinnamon | grep ^cinnamon | awk -F/ '{print $1}') \
    terminator ibus-mozc conky
  curl -sLO https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
  apt install -y ./google-chrome-stable_current_amd64.deb
  rm google-chrome-stable_current_amd64.deb
}

ubuntu() {
  apt update
  apt install -y $(apt search cinnamon | grep ^cinnamon | awk -F/ '{print $1}') \
    terminator ibus-mozc conky
  curl -sLO https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
  apt install -y ./google-chrome-stable_current_amd64.deb
  rm google-chrome-stable_current_amd64.deb
}

# Debian 11
bullseye() {
  debian
}

# Ubuntu 22.04
jammy() {
  ubuntu
}

# Ubuntu 20.04
focal() {
  ubuntu
}

{
  which lsb_release && lsb_release -cs
  eval $(cat /etc/*release)
  $VERSION_CODENAME
}
