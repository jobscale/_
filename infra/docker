#!/usr/bin/env bash
set -eux

export DEBIAN_FRONTEND=noninteractive

debian() {
  apt-get update
  apt-get install -y apt-transport-https
  apt-get update
  apt-get install -y software-properties-common ca-certificates gnupg

  echo ${ID,,} ${VERSION_CODENAME}
  curl -fsSL https://download.docker.com/linux/${ID,,}/gpg | apt-key add -
  add-apt-repository "deb https://download.docker.com/linux/${ID,,} ${VERSION_CODENAME} stable"
  apt-get update
  apt-get install -y docker-ce docker-ce-cli containerd.io
  echo -- sudo usermod -aG docker \$\(whoami\)
}

ubuntu() {
  apt-get update
  apt-get install -y apt-transport-https
  apt-get update
  apt-get install -y software-properties-common ca-certificates gnupg

  echo ${ID,,} ${VERSION_CODENAME}
  curl -fsSL https://download.docker.com/linux/${ID,,}/gpg | apt-key add -
  add-apt-repository "deb https://download.docker.com/linux/${ID,,} ${VERSION_CODENAME} stable"
  apt-get update
  apt-get install -y docker-ce
  echo -- sudo usermod -aG docker \$\(whoami\)
}

debian-2023() {
  apt-get update
  apt-get install -y apt-transport-https
  apt-get update
  apt-get install -y software-properties-common ca-certificates gnupg

  echo ${ID,,} ${VERSION_CODENAME}
  apt-get install -y docker.io
  echo -- sudo usermod -aG docker \$\(whoami\)
}

kali-rolling() {
  debian-2023
}

# Debian 10
buster() {
  debian
}

# Debian 11
bullseye() {
  debian
}

# Debian 12
bookworm() {
  debian-2023
}

# Ubuntu 20.04
focal() {
  ubuntu
}

# Ubuntu 22.04
jammy() {
  ubuntu
}

{
  date +'BEGIN $0 docker %Y-%m-%d %H:%M:%S'
  which lsb_release && lsb_release -cs || echo "no lsb_release"
  eval $(cat /etc/*release)
  $VERSION_CODENAME
  date +'END   $0 docker %Y-%m-%d %H:%M:%S'
}
