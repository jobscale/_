#!/usr/bin/env bash
set -eu

jsxjp() {
  docker exec -i production-control-plane crictl pull ghcr.io/jobscale/jsxjp
  kubectl rollout restart deployment -n jsxjp jsxjp
}

squid() {
  docker exec -i production-control-plane crictl pull ghcr.io/jobscale/squid
  kubectl rollout restart deployment -n net-apps squid
}

$1
