#!/bin/bash -eu

wait=5
sleep $wait

[ $(id -u) -eq 1000 ] && [ -e /dev/kvm ] && sudo chown $(whoami). /dev/kvm
conky -d

sleep $wait
cinnamon-screensaver-command -a

google-chrome "https://time.is"
sleep $wait

main() {
  nohup google-chrome "https://jsx.jp" &
  sleep $wait

  nohup discord &
  sleep $wait

  nohup slack &
  sleep $wait

  nohup wire-desktop &
  sleep $wait

  nohup terminator &
  sleep $wait
}
main >& /dev/null

[ -s "$HOME/bin/.autostart-extra" ] && "$HOME/bin/.autostart-extra"

