#!/usr/bin/env bash
set -eu

local() {
  which ip > /dev/null
  if [[ $? == 0 ]]
  then
    ip addr | grep "inet " | grep "dynamic" | awk -F'[ /]+' '{print $3}'
  else
    ifconfig | grep broadcast | grep -v '\.1 ' | awk '{print $2}'
  fi
}

global() {
  echo $(curl -s https://inet-ip.info/ip)
}

if [[ $# > 0 ]]
then
  $1
else
  local
  global
fi
