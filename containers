}

llm-Phi-4() {
  docker rm -f llm.Phi-4
  docker run --name llm.Phi-4 \
  --memory 4g \
  --shm-size 4g \
  -p 2887:8080 \
  -d ghcr.io/jobscale/llama.cpp:Phi-4
}

llm-Llama-3() {
  docker rm -f llm.Llama-3
  docker run --name llm.Llama-3 \
  --memory 4g \
  --shm-size 4g \
  -p 2888:8080 \
  -d ghcr.io/jobscale/llama.cpp:Llama-3
}

ls-logs() {
  LIST=($(sudo ls /var/lib/docker/containers))
  for i in ${LIST[@]}
  do
    sudo jq .Name /var/lib/docker/containers/$i/config.v2.json
    sudo ls -ltr /var/lib/docker/containers/$i
  done
}

inet() {
  docker ps
  iInfo() {
    echo -en "$(date --rfc-3339=seconds) - "
    https_proxy=127.0.0.1:3128 curl -s https://inet-ip.info/ip
  }
  echo $(iInfo)
  for i in {1..3}
  do
    sleep 2.97
    echo $(iInfo)
  done
}

proxies() {
  connect() {
    https_proxy=proxy.$1.jsx.jp:3128 curl -s https://inet-ip.info/ip
  }
  time connect secure
  time connect os
  time connect eu
  time connect us
}

{
  THIS=${0##*/}
  grep ^[a-z] containers | awk -F'(' '{print $1}'
}
