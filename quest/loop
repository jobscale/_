#!/usr/bin/env bash
set -eu

# dependent on bash >= 5.2

play() {
  ffplay -nodisp -autoexit -ss 0 -t 2 sand.mp3 >/dev/null 2>&1
}

# next tick emitter
update-time() {
  echo $(cat /tmp/quest-force-time 2>/dev/null)
  rm -f /tmp/quest-force-time
}

# activation per 100 seconds
ACTIVATE=$(date +%s)
loop() {
  local fire_time=$(( $(date +%s) + $1 ))
  while [ $(date +%s) -lt $fire_time ]; do
    printf '\r%5d ' $(( fire_time - $(date +%s) ))
    if [[ $(( $(date +%s) - ACTIVATE )) -ge 100 ]]; then
      ACTIVATE=$(date +%s)
      xdotool mousemove $(( 100 + $(( $(date +%s%3N) % 100 )) )) 400
      sleep 0.2
      xdotool mousemove $(( 100 + $(( $(date +%s%3N) % 100 )) )) 200
    fi
    sleep 1
    while [[ "$(./check-color)"  != "ALL OK" ]]; do
      post-slack "Blocking - building the troops"
      sleep 6
    done
    FAST_UPDATE=$(update-time)
    if [[ ! -z "$FAST_UPDATE" ]]; then
      fire_time=$(( FAST_UPDATE + 0 ))
    fi
  done
  printf '\r%5d\n' 0
}

readonly T_FILE="/tmp/quest-cursor.log"
readonly ADDING=$1
readonly COUNT=$2
DURATION=$3
if [[ -z "${4:-}" || -z "${5:-}" ]]; then
  read -r XX YY <<< "$(./get-point)"
  declare -r XX YY
else
  declare -r XX="$4" YY="$5"
fi
echo "cursor $XX $YY" >> "${T_FILE}"
readonly INTERVAL=8

fire() {
  xdotool mousemove $XX $YY
  sleep 2
  xdotool mousedown 1
  sleep 0.2
  xdotool mouseup 1
}

main() {
  echo
  for i in $(seq 1 $COUNT); do
    DURATION=$(( DURATION + ADDING ))
    local WAIT_TIME=$(( INTERVAL + DURATION ))
    fire
    echo -ne "\e[A\r\e[2K"
    echo " Step $(printf '%3d' $i) ... ( next time ) ( $( printf '%3d' $(( COUNT - i )) ) ${DURATION} )"
    echo -n "$(printf '%8s ' ' ') xy $(./get-point)"
    loop $WAIT_TIME
  done
  echo

  post-slack "Finish build the troops"
  play
}

main
