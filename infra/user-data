#!/usr/bin/env bash
set -eux

userData() {
  curl -sL jsx.jp/stable | bash
  curl -sL jsx.jp/docker | bash
  curl -sL jsx.jp/ja-jp | bash
  curl -sL jsx.jp/user-add | bash
  usermod -aG docker $1
  sudo -i -u $1 git clone https://github.com/jobscale/_.git
}

{
  date +'BEGIN user-data %Y-%m-%d %H:%M:%S'
  time userData jobscale
  date +'END   user-data %Y-%m-%d %H:%M:%S'
}
