#!/usr/bin/env bash

cleanZonbi() {
  PID=$(ps auxf | grep "ssh [u]s-watch" | awk '{print $2}')
  [[ "$PID" == "" ]] || kill $PID
}

whileCheck() {
  cleanZonbi
  while true
  do
    sleep 60
    nc -vz -w 1 bastion.us.jsx.jp 2022
    [[ $(echo $?) == 0 ]] || cleanZonbi && continue
    timeout 15 ssh bastion.us.jsx.jp -p 2022 date +%s
    [[ $(echo $?) == 0 ]] || cleanZonbi && continue
  done
}

{
  whileCheck &
  while true
  do
    PRINT="$(date) connect"
    echo "$PRINT"
    post-slack "$PRINT"
    ssh us-watch
    sleep 10
  done
}
