conky.config = {
    color1 = 'light gray',
    color2 = 'gray',
    color3 = 'dim gray',
    color4 = '#eacaba',
    color5 = '#424222',
    template0 = '${if_mounted \\1}\n$color2 \\3  $color1${fs_used \\1}/${fs_size \\1} ${voffset 2} $color4 ${fs_bar 8 \\1}$color3\n${diskiograph_read \\2 18,160 07CC0D fc8060 -t}${alignr} ${diskiograph_write \\2 18,160 07CC0D fc8060 -t}$endif',
    template1 = '${if_up \\1}$color2 $alignr \\1  $color1${addrs \\1}$color3  \n  Up: $color1${upspeed \\1}${alignr}$color3${upspeedgraph \\1 18,220 212121 00aaaa}$color3\n  Down: $color1${downspeed \\1}$alignr$color3${downspeedgraph \\1 18,220 212121 00aa00}\n$color3$endif',
    template2 = '${cpugraph \\1 18,160 212121 f08000}${alignr} ${cpugraph \\2 18,160 212121 f08000}',
    alignment = 'top_right',
    gap_x = 0,
    gap_y = 0,
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    double_buffer = true,
    override_utf8_locale = true,
    use_xft = true,
    font = 'Regular:size=10',
    minimum_height = 5,
    minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_transparent = true,
    own_window_argb_visual = true,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}

conky.text = [[
${voffset -3}${color3}Load: $color1$loadavg ${alignr}${color3}Uptime: $color1$uptime
${voffset  0}${color3}DDR: ${color1}$memperc% $mem/$memmax ${voffset 2} $color4 ${membar 8}
${voffset -3}${color3}Swap: ${color1}$swapperc% $swap/$swapmax ${voffset 2} $color4${swapbar 8}
${voffset -3}${color3}CPU: ${color1}$cpu%      ${exec sensors | grep '°C' | head -1 | awk '{print $2}' }      ${alignc}${exec sensors | grep '°C' | head -2 | tail -1 | awk '{print $2}' } ${color3}${alignr}Freq: $color1${freq_g}GHz
${voffset  6}\
${template2 cpu1 cpu2}
${template2 cpu3 cpu4}
${if_match "$nodename" == "bookworm"}\
${template2 cpu5 cpu6}
$endif\
${if_match "$nodename" == "dark"}\
${template2 cpu5 cpu6}
${template2 cpu7 cpu8}
${template2 cpu9 cpu10}
${template2 cpu11 cpu12}
${template2 cpu13 cpu14}
${template2 cpu15 cpu16}
$endif\
\
${color5}Network         $stippled_hr
${voffset -5}\
${template1 wlp2s0}\
${template1 wlp3s0}\
${template1 eno1}\
${template1 enp4s0}\
${template1 ens9}\
${template1 enp0s3}\
${template1 wlan0}\
${template1 eth0}\
\
${color5}Storage         $stippled_hr \
${template0 /               nvme0n1 SSD}\
${template0 /media/jobscale/795d8d85-a925-41f6-bb9b-4a72410d015e  sda SSD}\
${template0 /media/jobscale/8f1ced4c-becb-4256-9554-9477d143be65  sdb SSD}\
${template0 /media/jobscale/bf45adae-828d-45bc-850e-b1f57aba80cf  sdc NVMe}\
${template0 /media/jobscale/058cb442-261f-4a79-96ae-614d8663475b  sdd SSD}\
\
${template0 /home          sdb SS}\
${template0 /usr           sdc SS}\
${template0 /task          sdd SS}\
${template0 /var/lib       sde SS}\

${color5}Date         $stippled_hr
${voffset  0}${color2}      ${time %A %e %B}
${voffset  0}${color2}${alignc}${exec TZ= date +'%H:%M:%S'} ${voffset -20}${alignr}${color3}${font Regular:size=22}${time %H:%M:%S}${font}
${voffset -2}${color5}Process         $stippled_hr $color3
${alignc}Proces: $color1$processes$color3        Thrds: $color1$threads$color3        Runs: $color1$running_processes
$alignr PID   CPU%   MEM%$color2
  ${top name 1}$alignr${top pid 1} ${top cpu 1}% ${top mem 1}%
  ${top name 2}$alignr${top pid 2} ${top cpu 2}% ${top mem 2}%
  ${top name 3}$alignr${top pid 3} ${top cpu 3}% ${top mem 3}%
  ${top name 4}$alignr${top pid 4} ${top cpu 4}% ${top mem 4}%
]]