#!/usr/bin/env bash
set -eu

configure() {
  cat > $HOME/l2tp.env <<EOF
VPN_IPSEC_PSK=vpn-pre-shared-key
VPN_USER=vpn-user
VPN_PASSWORD=vpn-secret
VPN_PUBLIC_IP=
VPN_L2TP_NET=
VPN_L2TP_LOCAL=
VPN_L2TP_REMOTE=
VPN_XAUTH_NET=
VPN_XAUTH_REMOTE=
VPN_DNS1=
VPN_DNS2=
VPN_SHA2_TRUNCBUG=
EOF
}

start() {
  docker run --name l2tp \
  --privileged \
  --restart=always \
  -p 500:500/udp -p 4500:4500/udp \
  --env-file $HOME/l2tp.env -it ghcr.io/jobscale/l2tp
}

listUsers() {
  docker exec -it l2tp l2tpctl -l
}

addUser() {
  docker exec -it l2tp l2tpctl -a
}

deleteUser() {
  docker exec -it l2tp l2tpctl -d
}

{
  configure
  start
}
