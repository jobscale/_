#!/usr/bin/env bash
set -u

LIST=(
  php-fpm
  php-fpm:xdebug
  node-aws
  node-aws:dind
  mongo-blog
  webssh
  python-fastapi
  partner
  ramen-timer
  node-express-ejs-authorization
  wetty
  value-domain
  jsxjp
  web
  todo
  bind9
  nginx-net
  nginx-tls
  tetris
  django
  bastion
  certbot
  squid
  wordpress
  focal
  cloud-terminal
  health-check
  speedtest-slack
  eslint
  certificate
  gitlab
  svn
  dokuwiki
  anywaychat
  room-chat
  mqtt-chat
  swagger-editor
  wallgame
  autocannon
  basic-auth
  profile
  mp4box
  webm
  simple-chat
  lumen
  laravel
  ec-cube
)

main() {
  for i in ${LIST[@]}
  do
    echo docker pull ghcr.io/jobscale/$i \
    && docker pull ghcr.io/jobscale/$i \
    && echo docker tag ghcr.io/jobscale/$i jobscale/$i \
    && docker tag ghcr.io/jobscale/$i jobscale/$i \
    && echo docker push jobscale/$i \
    && docker push jobscale/$i
    docker rmi ghcr.io/jobscale/$i jobscale/$i
  done
}

{
  echo "START $(date)"
  main 2>&1
  echo "FINISH $(date)"
} | tee -a ~/docker-list.log

