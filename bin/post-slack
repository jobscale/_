#!/usr/bin/env bash
set -u

DATA="$1"
ENDPOINT=https://jsx.jp/api/slack

postSlack() {
  GIP=$(curl -s https://inet-ip.info/ip)
  curl -s -X POST -H 'Content-Type: application/json' ${ENDPOINT} \
  --data "{\"icon_emoji\":\":anchor:\",\"username\":\"Anchor\",\"text\":\"$GIP\\n$DATA\"}" > /dev/null || echo
}

postSlack
